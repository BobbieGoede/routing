{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "paths": {
      "@intlify/vue-router-bridge": ["./node_modules/@intlify/vue-router-bridge/lib/index.d.ts"],
      "@intlify/vue-i18n-bridge": ["./node_modules/@intlify/vue-i18n-bridge/lib/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "test/**/*.ts", "test/**/*.d.ts", "scripts/**/*.ts", "scripts/**/*.d.ts"],
}
